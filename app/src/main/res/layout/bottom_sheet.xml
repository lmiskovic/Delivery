<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:visibility="invisible"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:id="@+id/visibleRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

            <TextView
                android:id="@+id/sheetAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:text="Address: "
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sheetTextDeliveryAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/sheetTextDeliveryAdress"
                android:layout_toRightOf="@id/sheetAddress"
                android:paddingVertical="4dp"
                android:textColor="@color/colorPrimaryText" />

        <TextView
                android:id="@+id/sheetCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetAddress"
            android:layout_marginTop="4dp"
            android:paddingVertical="4dp"
            android:text="Custommer name: "
                android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/sheetTextCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetTextDeliveryAdress"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/sheetCustomerName"
                android:paddingVertical="4dp"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/sheetContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetCustomerName"
                android:paddingVertical="4dp"
                android:text="Contact phone number: "
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sheetTextContactPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetTextCustomerName"
                android:layout_toRightOf="@id/sheetContactPhone"
                android:paddingVertical="4dp"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/sheetNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetContactPhone"
                android:paddingVertical="4dp"
                android:text="Note: "
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sheetTextNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetTextContactPhone"
                android:layout_toRightOf="@id/sheetNote"
                android:paddingVertical="4dp"
                android:textColor="@color/colorPrimaryText" />
    </RelativeLayout>
    
    

    <Button
        android:id="@+id/buttonDelivered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimarylighter"
        android:clickable="true"
        android:padding="16dp"
        android:text="Delivered"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryText" />


</LinearLayout>