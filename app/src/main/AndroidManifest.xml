<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luka.delivery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".loginActivity"
            android:windowSoftInputMode="adjustPan"> <!-- Adjust pan of the screen so we can see input field while typing in landscape mode -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registerActivity"
            android:windowSoftInputMode="adjustPan"> <!-- Adjust pan of the screen so we can see input field while typing in landscape mode -->

        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".mapActivity"></activity>

        <activity
            android:name=".deliveryActivity"></activity>

        <activity
            android:name=".optimizeActivity"></activity>

        <activity
            android:name=".aboutActivity"></activity>
    </application>

</manifest>