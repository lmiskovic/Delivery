<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/visibleRelativeLayout">

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/sheetAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:text="Address: "/>

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/sheetTextDeliveryAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sheetAddress"
                android:textColor="@color/colorPrimaryText"
                android:layout_above="@id/sheetTextDeliveryAdress"/>

            <TextView
                android:paddingVertical="4dp"
                android:layout_marginTop="4dp"
                android:id="@+id/sheetCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetAddress"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:text="Custommer name: "/>

            <TextView
                android:paddingVertical="4dp"
                android:layout_marginTop="4dp"
                android:id="@+id/sheetTextCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetTextDeliveryAdress"
                android:layout_toRightOf="@id/sheetCustomerName"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/sheetContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetCustomerName"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:text="Contact phone number: "/>

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/sheetTextContactPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetTextCustomerName"
                android:layout_toRightOf="@id/sheetContactPhone"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/sheetNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sheetContactPhone"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:text="Note: "/>

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/sheetTextNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:layout_toRightOf="@id/sheetNote"
                android:layout_below="@id/sheetTextContactPhone"/>
    </RelativeLayout>
    
    

    <Button
        android:id="@+id/buttonDelivered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@color/colorPrimarylighter"
        android:text="Delivered"
        android:textAllCaps="false"
        android:clickable="true"
        android:textColor="@color/colorPrimaryText"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonTomorrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@color/colorPrimarylighter"
        android:text="Custommer not available, try again tomorrow"
        android:textAllCaps="false"
        android:clickable="true"
        android:textColor="@color/colorPrimaryText"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonDeclined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@color/colorPrimarylighter"
        android:text="Delivery declined by customer"
        android:textAllCaps="false"
        android:clickable="true"
        android:textColor="@color/colorPrimaryText"
        android:padding="16dp"
        android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>


</LinearLayout>